<div class="container mt-5">

  <!-- Banner Section -->
  <div class="banner">
    
    <%= image_tag 'c.webp', alt: 'Banner Image' %>
  </div>

  <!-- Offer Section Card -->
  <div class="row">
    <div class="col-lg-12">
      <div class="card shadow p-4">
        <h3 class="card-title">Der aktuelle InSL-Wirkungsbericht:</h3>
